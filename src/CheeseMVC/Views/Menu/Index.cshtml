@model List<CheeseMVC.Models.Menu>
@{
    ViewData["Title"] = "Index";
}

<h2>Index</h2>

@if (Model.Count == 0)
{
    <p>No menus yet!</p>
}

<p><a asp-controller="Menu" asp-action="Add">Add menu</a></p>


<table class="table">

    <tr>
        <th>Name</th>
        
    </tr>

    @foreach (var cheese in Model)
    {
        <tr>            
            <td><a asp-controller="Menu" asp-action="ViewMenu" asp-route-id=@cheese.ID>@cheese.Name</a></td>
        </tr>
    }
</table>