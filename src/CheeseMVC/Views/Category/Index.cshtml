@model List<CheeseMVC.Models.CheeseCategory>

@{
ViewData["Title"] = "Index";
}

<h2>Index</h2>

<p><a asp-controller="Category" asp-action="Add">Add Category</a></p>


@if (Model.Count == 0)
{
    <p>No category yet!</p>
}
<table class="table">

    <tr>
        <th>Name</th>
        
        
    </tr>

    @foreach (var category in Model)
    {
        <tr>
            <td>@category.Name</td>            
        </tr>
    }
</table>

